<p style="color: green"><%= notice %></p>

<%= render @restaurant %>

<% if @restaurant.reviews.empty? %>
  <p>Be the first to <%= link_to 'add a review', new_restaurant_review_path(@restaurant) %></p>
<% else %>
  <ul>
    <h3>Reviews</h3>
    <% @restaurant.reviews.each do |review| %>
      <li>
        <p><%= review.content %></p>
        <%= link_to 'Remove your review', review_path(review), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
      </li>
    <% end %>
  </ul>
<% end %>
<div>
  <%= link_to 'Check our chef', chef_restaurant_path(@restaurant) %> |
  <%= link_to "Edit this restaurant", edit_restaurant_path(@restaurant) %> |
  <%= link_to "Back to restaurants", restaurants_path %>

  <%= button_to "Destroy this restaurant", @restaurant, method: :delete %>
</div>
